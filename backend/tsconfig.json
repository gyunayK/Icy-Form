{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false, 
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "node", 
    "types": ["node", "multer"],
    "outDir": "./dist", 
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*" ,
    "api/*" 
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
