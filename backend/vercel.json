{
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["uploads/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/main.ts"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/uploads/$1"
    }
  ],
  "env": {
    "MONGO_URI": "@mongo_uri"
  }
}
